{
    "extends": ["airbnb-base", "plugin:prettier/recommended"],
    "env": {
        "es6": true,
        "jest": true
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 2 }],
        "no-console": "off",
        "camelcase": "off",
        "class-methods-use-this": "off",
        "radix": "off",
        "consistent-return": "off",
        "no-underscore-dangle": "off",
        "no-var": ["error"],
        "semi": ["error", "always"],
        "comma-dangle": ["error", "never"],
        "curly": ["error", "all"]
    }
}
